#!/usr/bin/make -f

# export DH_VERBOSE=1

%:
	dh $@

# Maintainer's custom build recipes

sources-nobackups:
	find -name "*~.d" -exec xargs rm -r \;

debuild-launchpad: sources-nobackups
	debuild -i"\\.git" -I~.d -I.bash_history -I.git -S -sa

dpkg-buildpackage:
	dpkg-buildpackage -i"(\\.git|.*~\\.d)" -I~.d -I.bash_history -I.git -rfakeroot

git-commit:
	sh debian/git-commit

git-push:
	git push; git push --tags

debrelease-launchpad:
	debrelease --dput -S ppa:michele-bini/ppa-mbxxii
